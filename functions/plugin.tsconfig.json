{
  "include": ["plugin/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "ES2019"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    // "noEmit": true,
    // "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "plugin/*" ]
    }
  }
}
